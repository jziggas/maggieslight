= render "sidebar"
.span8
  %h1#header= "Edit the profile of #{@care_provider_profile.name}"
  %hr
  .well
    = render 'form'

    = link_to raw("<i class='icon-arrow-left'></i> Back"), care_provider_profiles_path, class: "btn"
    = link_to raw("View Profile <i class='icon-user icon-white'></i>"), @care_provider_profile, class: "btn btn-info"
    = link_to raw("Delete <i class='icon-trash icon-white'></i>"), care_provider_profile_path(@care_provider_profile), class: "btn btn-danger", method: :delete, confirm: "Are you sure?"