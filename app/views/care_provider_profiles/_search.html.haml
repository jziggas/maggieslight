= form_tag care_provider_profiles_path, :method => 'get', :id => "profile_search" do
  %p
    Search Student Caregivers:
    = text_field_tag :search, params[:search], placeholder: "city, county, disability, skills, name"
    - if params[:search]
      = link_to "Clear Search", care_provider_profiles_path(params.merge(search: nil)), class: 'btn btn-default', style: 'font-weight: normal'
    = hidden_field_tag :direction, params[:direction]
    = hidden_field_tag :sort, params[:sort]