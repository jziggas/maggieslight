= form_tag root_path, :method => 'get', :id => "profile_search" do
  %p
    Search Volunteer Opportunities:
    = text_field_tag :search, params[:search], placeholder: "title, location, organization"
  - if params[:search]
    = link_to "Clear Search", root_path(params.merge(search: nil)), class: 'btn  btn-default', style: 'font-weight: normal; font-family: Arial;'
  = hidden_field_tag :direction, params[:direction]
  = hidden_field_tag :sort, params[:sort]