%p#notice= notice
= render "sidebar"
.span8
  .well
    %h1= "Profile of #{@care_receiver_profile.name}"
    %hr
    %p= image_tag @care_receiver_profile.profile_picture.url(:large)
    %p
    %p
      %b Birthday:
      = @care_receiver_profile.birthdate
    %p
      %b Gender:
      = @care_receiver_profile.gender
    %p
      %b Disabilities:
      = @care_receiver_profile.disabilities
    %p
      %b Hobbies:
      = @care_receiver_profile.hobbies
    %p
      %b Services needed:
      = @care_receiver_profile.services_needed
    %p
      %b Misc:
      = @care_receiver_profile.misc
    %p
      %b Hours needed:
      = @care_receiver_profile.hours_needed
    %p
      %b Days needed:
      = @care_receiver_profile.days_needed
    %p
      %b Location:
      = @care_receiver_profile.location
    %p
      %b Transportation:
      = @care_receiver_profile.transportation
    %p
      %b Contact name:
      = @care_receiver_profile.contact_name
    %p
      %b Contact email:
      = @care_receiver_profile.contact_email
    %p
      %b Contact phone:
      = @care_receiver_profile.contact_phone
    - if can? :update, @care_receiver_profile
      = link_to 'Edit', edit_care_receiver_profile_path(@care_receiver_profile), class: "btn"
    = link_to 'Back', care_receiver_profiles_path, class: "btn"
