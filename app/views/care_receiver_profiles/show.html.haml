= render "sidebar"
.span8#hideOverflow
  .well
    %h1#header= "Profile for #{@care_receiver_profile.name}"
    %hr
    %p= image_tag @care_receiver_profile.profile_picture.url(:thumb)
    %p
    %p
      %b Birthday:
      = @care_receiver_profile.birthdate.strftime('%B %-d, %Y')
    %p
      %b Gender:
      = @care_receiver_profile.gender
    %p
      %b Disabilities and Diagnoses:
      = @care_receiver_profile.disabilities
    %p
      %b Hobbies:
      = @care_receiver_profile.hobbies
    %p
      %b Services needed:
      = @care_receiver_profile.services_needed
    %p
      %b Misc:
      = @care_receiver_profile.misc
    %p
      %b Hours needed:
      = @care_receiver_profile.hours_needed
    %p
      %b Days needed:
      = @care_receiver_profile.days_needed
    %p
      %b City:
      = @care_receiver_profile.city
    %p
      %b County:
      = @care_receiver_profile.county
    %p
      %b Has Transportation:
      = @care_receiver_profile.transportation
    %p
      %b Contact name:
      = @care_receiver_profile.contact_name
    %p
      %b Contact email:
      %a{href: "mailto:#{@care_receiver_profile.contact_email}"}= @care_receiver_profile.contact_email
    %p
      %b Contact phone:
      %a{href: "tel:#{@care_receiver_profile.contact_phone}"}= @care_receiver_profile.contact_phone.phony_formatted(:spaces => '-')
    = link_to raw("<i class='icon-arrow-left'></i> Back"), care_receiver_profiles_path, class: "btn"
    - if can? :update, @care_receiver_profile
      = link_to raw("Edit <i class='icon-edit'></i>"), edit_care_receiver_profile_path(@care_receiver_profile), class: "btn btn-warning"
      = link_to raw("Delete <i class='icon-trash icon-white'></i>"), care_receiver_profile_path(@care_receiver_profile), class: "btn btn-danger", method: :delete, confirm: "Are you sure?"