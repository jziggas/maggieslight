= render "sidebar"
.span8.profiles
  %h1#header Family and Individual Ads
  %hr
  %p.lead
    = "Searching for '#{params[:search]}'. " if params[:search]
    = "Sorted by '#{humanize_sort_type(@sort_column)}' in #{humanize_sort_direction(@sort_direction)} order."
  = will_paginate @profiles
  %h6.lead= "Nothing Found" if @profiles[0].nil?
  - @profiles.each do |profile|
    - if profile.visibility == "Visible" || (profile.visibility == "Hidden" && profile.user == current_user)
      .well
        .container-fluid
          .row-fluid
            .span8#hideOverflow
              %h6.lead= "#{profile.name} is #{profile.age} old and lives in #{profile.city}"
              %p= "Likes: #{profile.hobbies}"
              %p= "Disabilities and Diagnoses: #{profile.disabilities}"
              %span.label{:class => "label-#{status_label(profile.status)}"}= profile.status
              %p
            .span4
              = image_tag profile.profile_picture.url(:thumb), class: "img-circle"
              #summary-button
                = link_to raw("View Profile <i class='icon-user icon-white'></i>"), profile, class: "btn btn-info"
                - if user_signed_in? && profile.user != current_user
                  - if !current_user.flagged?(profile)
                    = link_to raw("<i class=icon-flag></i>"), flag_care_receiver_profile_path(profile), class: "flag", title: "Flag this content as inappropriate.", "data-placement" => "right"
                  - else
                    = link_to raw("<i class='icon-remove-sign'></i>"), flag_care_receiver_profile_path(profile), class: "flag", title: "Unflag this content.", "data-placement" => "right"
  = will_paginate @profiles