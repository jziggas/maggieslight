= render "sidebar"
.span8
  %h1 People in Need of Care
  = form_tag root_path, :method => 'get', :id => "profile_search" do
    %p
      = text_field_tag :search, params[:search]
      = submit_tag "Search", :name => nil, class: "btn"
    #profiles
      = hidden_field_tag :direction, params[:direction]
      = hidden_field_tag :sort, params[:sort]
  = will_paginate @profiles
  - @profiles.each do |profile|
    .well
      %table
        %tr
          %td
            %h5= link_to "#{profile.name} is #{profile.age} old and lives in #{profile.location}.", profile
            %p= "\nDisabilities: #{profile.disabilities}"
            %p= "\nLikes: #{profile.hobbies}"
          %td= image_tag profile.profile_picture.url(:thumb), class: "img-circle"
  = will_paginate @profiles