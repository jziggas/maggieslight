= form_tag root_path, :method => 'get', :id => "profile_search" do
  %p
    = text_field_tag :search, params[:search]
    = submit_tag "Search", :name => nil, class: "btn"
    - if params[:search]
      = link_to "Clear Search", root_path(params.merge(search: nil)), class: 'btn', style: 'font-weight: normal; font-family: Arial;'
    = hidden_field_tag :direction, params[:direction]
    = hidden_field_tag :sort, params[:sort]