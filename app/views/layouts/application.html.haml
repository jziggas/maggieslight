%html
  %head
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
      %title= content_for?(:title) ? yield(:title) : "Community Works Caregiver Registry"
      %meta{:content => content_for?(:description) ? yield(:description) : "Maggieslight", :name => "description"}
        = stylesheet_link_tag "application", :media => "all"
        = javascript_include_tag "application"
        = csrf_meta_tags
        = yield(:head)
  .box01
    %body#maggiebeige{:class => "#{controller_name} #{action_name}"}
      = image_tag "maggies_light_logo.png"
      = render 'layouts/navigation'
      .content
        -#       #main{:role => "main"}
        .container-fluid
        .row-fluid
          = render 'layouts/messages'
          = yield
= render 'layouts/footer'